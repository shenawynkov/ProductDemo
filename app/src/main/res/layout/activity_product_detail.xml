<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout" xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView

                android:layout_width="match_parent"
                android:layout_height="150dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.54"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                android:textSize="18sp" android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="16dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_price" app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" android:textSize="18sp"/>
        <TextView
                android:text="Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/tv_price" android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:textStyle="italic"
                android:textColor="@color/colorPrimaryDark" android:textSize="18sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/tv_description"
                app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/tv_price"
                android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@+id/textView"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
